//example 9 
int motor_pin = 9;
int pot_pin =A0 ;
int speed ;
int sw =0;
int dir1=12;
int dir2=11 ;

void setup() {
  pinMode (dir1 ,OUTPUT );
  pinMode (dir2,OUTPUT );
  pinMode (sw,INPUT);

}

void loop() {
if (digitalRead(sw)== HIGH )
{
digitalWrite (dir1,HIGH );

digitalWrite (dir2,LOW );


}
else 
{
//CHANGE DIRECTION OF MOTOR 
 digitalWrite (dir1,LOW);
  digitalWrite (dir2,HIGH );
}

  
  speed = analogRead (pot_pin )/4.0 ;
  delay (200);
  analogWrite (motor_pin ,speed );
  
  //thank you :D

}
