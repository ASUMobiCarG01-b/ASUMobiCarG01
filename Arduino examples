//ex 11
int led=12;
int sensorpin=13;


void setup() {
 pinMode (led,OUTPUT);
serial.begin(9600);

}

void loop() {
  int t =pulseIn (sensorpin,HIGH );
  int x =t/58 ;
  serial.println (x );
  digitalWrite (led,HIGH );
  delay (10*x);
   digitalWrite (led,LOW );
  delay (10*x);
  delay (200);
  //motion sensor 
  //thank you :D
  }
  
//andro ex 12 
int xpin =A0;
int ypin =A1 ;
void setup() {
  serial.begin (9600);
}
void loop() {
  int x_value = analogRead (xpin );
  int y_value =analogRead (ypin );
  serial.print("x value =");
  serial.println (x_value );
  serial.print("yvalue =");
  serial.println (y_value );
delay(200);
//accerleratoin sensor 
//thank u :) 
}

