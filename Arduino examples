//Fady Melad
//Example 24 MotorSpeedControl

int motorPin = 10;
void setup()
{
pinMode(motorPin, OUTPUT);
}
void loop()
{
for (int i=0; i<=255; i++)
{
analogWrite(motorPin, i);
delay(10);
} 
delay(500);

for(int i=255; i>=0; i--)
{
analogWrite(motorPin, i);
delay(10); 
} 
delay(500);
}
